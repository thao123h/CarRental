<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:navigationIcon="@android:drawable/ic_menu_revert"
                app:titleTextColor="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chi tiết đơn"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Car Image Banner -->
        <ImageView
            android:id="@+id/ivCarBanner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:contentDescription="Car Image"
            tools:src="@android:drawable/ic_menu_gallery" />

        <!-- Car Name and License Plate Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <!-- Car Name -->
                <TextView
                    android:id="@+id/tvCarName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:textAlignment="center"
                    tools:text="Xe ô tô thể thao Nissan GTR-R35" />

                <!-- License Plate -->
                <TextView
                    android:id="@+id/tvLicensePlate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:background="@drawable/bg_license_plate"
                    tools:text="19AA - 123.45" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Booking Details Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Price per Day -->
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp"
                    tools:text="• Đơn giá: 500.000 VNĐ / Ngày" />

                <!-- Rental Start Date -->
                <TextView
                    android:id="@+id/tvStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp"
                    tools:text="• Ngày thuê: 01/01/2025" />

                <!-- Rental End Date -->
                <TextView
                    android:id="@+id/tvEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp"
                    tools:text="• Ngày trả: 05/01/2025" />

                <!-- Location/Address -->
                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp"
                    tools:text="• Địa điểm: Ngõ A, Đường B, Phường C, Phố B, Tỉnh D" />

                <!-- Renter Name -->
                <TextView
                    android:id="@+id/tvRenterName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp"
                    tools:text="• Người thuê: Nguyễn Văn A" />

                <!-- Renter Phone -->
                <TextView
                    android:id="@+id/tvRenterPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#2196F3"
                    android:layout_marginBottom="8dp"
                    android:autoLink="phone"
                    tools:text="• SĐT người thuê: 0123456789" />

                <!-- Owner Name -->
                <TextView
                    android:id="@+id/tvOwnerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp"
                    tools:text="• Chủ xe: Văn Nguyễn B" />

                <!-- Owner Phone -->
                <TextView
                    android:id="@+id/tvOwnerPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#2196F3"
                    android:autoLink="phone"
                    tools:text="• SĐT Chủ xe: 0987654321" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Status Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tình trạng đơn:"
                android:textSize="16sp"
                android:textColor="#212121"
                android:layout_marginEnd="8dp" />

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/bg_status_badge"
                tools:text="Chấp Thuận"
                tools:backgroundTint="#4CAF50" />

        </LinearLayout>

        <!-- Action Buttons Container -->
        <LinearLayout
            android:id="@+id/layoutActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp">

            <!-- Accept Button (Owner only) -->
            <Button
                android:id="@+id/btnAccept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHẤP THUẬN"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_green"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Reject Button (Owner only) -->
            <Button
                android:id="@+id/btnReject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TỪ CHỐI"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_red"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Cancel Button (Renter only) -->
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HỦY ĐƠN"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_red"
                android:padding="14dp"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>