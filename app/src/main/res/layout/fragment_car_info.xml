<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_info_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card 1: Thông tin cơ bản -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:padding="12dp">

            <LinearLayout
                android:id="@+id/card_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin cơ bản"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Các mục Thông tin cơ bản cần phải chính xác. Bạn sẽ không thể thay đổi một số thông tin sau khi đăng ký."
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"/>

                <!-- License plate -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Biển số xe *">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_plate"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:inputType="text"
                        android:padding="8dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Brand spinner -->
                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hãng xe *"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"/>
                <Spinner
                    android:id="@+id/spinner_brand"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"/>

                <!-- Model spinner -->
                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mẫu xe *"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"/>
                <Spinner
                    android:id="@+id/spinner_model"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"/>

                <!-- Year and seats row -->
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Spinner
                        android:id="@+id/spinner_year"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1" />

                    <Spinner
                        android:id="@+id/spinner_seat"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- Transmission radio -->
                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Truyền động *"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"/>

                <RadioGroup
                    android:id="@+id/rg_transmission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">

                    <RadioButton
                        android:id="@+id/rb_auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số tự động" />

                    <RadioButton
                        android:id="@+id/rb_manual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số sàn"
                        android:layout_marginStart="16dp"/>
                </RadioGroup>

                <!-- Fuel type -->
                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fuel type"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"/>
                <Spinner
                    android:id="@+id/spinner_fuel"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"/>

                <!-- Kms -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Số km">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_kms"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:inputType="number"
                        android:padding="8dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Item title -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tên gói / Item">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_item_title"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:inputType="text"
                        android:padding="8dp"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 3: Giá cho thuê (đặt trong trang info để gộp) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mức giá đề xuất"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"/>

                <TextView
                    android:id="@+id/tv_suggested_price"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1953K"
                    android:textSize="36sp"
                    android:textColor="@color/green"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thu nhập ước tính trong năm"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"/>

                <!-- Range slider placeholder -->
                <View
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_card"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View android:layout_width="match_parent" android:layout_height="24dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>