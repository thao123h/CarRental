<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Ảnh xe -->
        <ImageView
            android:id="@+id/imgCar"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tên xe -->
        <TextView
            android:id="@+id/tvCarName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="MASERATI VSS"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222222"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/imgCar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Chi tiết xe -->
        <TextView
            android:id="@+id/tvCarDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="7 chỗ • Xăng"
            android:textSize="13sp"
            android:textColor="#666666"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvCarName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Địa điểm -->
        <TextView
            android:id="@+id/tvCarLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hà Nội"
            android:textSize="13sp"
            android:textColor="#777777"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvCarDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Giá thuê -->
        <TextView
            android:id="@+id/tvCarPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500.000đ/ngày"
            android:textStyle="bold"
            android:textColor="#009688"
            android:textSize="15sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvCarLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
