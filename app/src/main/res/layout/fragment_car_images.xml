<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_images_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- CardView bao toàn bộ -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ảnh xe"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nhập URL các ảnh xe. Hệ thống sẽ hiển thị preview ngay bên dưới."
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"/>

                <!-- Grid layout 2x2 cho URL + preview -->
                <GridLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:alignmentMode="alignMargins"
                    android:useDefaultMargins="true">

                    <!-- Ô 1 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_columnWeight="1"
                        android:padding="4dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:hint="URL ảnh 1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_url1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:id="@+id/iv_url1_preview"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginTop="6dp"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_card"
                            android:src="@android:drawable/ic_menu_camera"
                            app:tint="@color/light_grey" />
                    </LinearLayout>

                    <!-- Ô 2 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_columnWeight="1"
                        android:padding="4dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:hint="URL ảnh 2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_url2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:id="@+id/iv_url2_preview"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginTop="6dp"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_card"
                            android:src="@android:drawable/ic_menu_camera"
                            app:tint="@color/light_grey" />
                    </LinearLayout>

                    <!-- Ô 3 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_columnWeight="1"
                        android:padding="4dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:hint="URL ảnh 3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_url3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:id="@+id/iv_url3_preview"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginTop="6dp"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_card"
                            android:src="@android:drawable/ic_menu_camera"
                            app:tint="@color/light_grey" />
                    </LinearLayout>

                    <!-- Ô 4 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_columnWeight="1"
                        android:padding="4dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:hint="URL ảnh 4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_url4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:id="@+id/iv_url4_preview"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginTop="6dp"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_card"
                            android:src="@android:drawable/ic_menu_camera"
                            app:tint="@color/light_grey" />
                    </LinearLayout>
                </GridLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
